<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>
  <configuration> 
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyyMMdd HH:mm:ss} [%-5p] %C{15}.%M:%L :  %ex{full}%m%n</pattern>
    </encoder>
  </appender>
  
  <root>
    <level value="INFO"/>
    <appender-ref ref="CONSOLE" />
  </root>
</configuration>